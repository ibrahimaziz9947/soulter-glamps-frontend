{
  // ============================================
  // MEMORY OPTIMIZATION FOR LOW-RAM SYSTEMS (3GB)
  // ============================================
  
  // TypeScript Server Memory Limit (256MB - very aggressive for 3GB RAM)
  "typescript.tsserver.maxTsServerMemory": 256,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.suggest.enabled": false,
  "typescript.suggest.autoImports": false,
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.enumMemberValues.enabled": false,
  
  // ============================================
  // FILE WATCHER EXCLUSIONS (Prevents CPU/Memory Spikes)
  // ============================================
  
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.vercel/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true,
    "**/.history/**": true,
    "**/out/**": true,
    "**/tmp/**": true,
    "**/temp/**": true
  },
  
  // ============================================
  // SEARCH EXCLUSIONS (Faster Search, Less Memory)
  // ============================================
  
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.vercel": true,
    "**/dist": true,
    "**/build": true,
    "**/.cache": true,
    "**/coverage": true,
    "**/.history": true,
    "**/out": true,
    "**/tmp": true,
    "**/temp": true,
    "**/.git": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true
  },
  
  // ============================================
  // FILE EXPLORER EXCLUSIONS (Cleaner View, Less Memory)
  // ============================================
  
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.next": true,
    "**/.vercel": true,
    "**/dist": true,
    "**/build": true,
    "**/.cache": true,
    "**/coverage": true,
    "**/.history": true,
    "**/out": true
  },
  
  // ============================================
  // ESLINT COMPLETELY DISABLED
  // ============================================
  
  "eslint.enable": false,
  "eslint.run": "onSave",
  "eslint.validate": [],
  
  // ============================================
  // JAVASCRIPT/TYPESCRIPT SUGGESTIONS DISABLED
  // ============================================
  
  "javascript.suggest.enabled": false,
  "javascript.suggest.autoImports": false,
  "javascript.suggestionActions.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  
  // ============================================
  // GIT OPTIMIZATIONS (Reduce File System Operations)
  // ============================================
  
  "git.enabled": true,
  "git.autorefresh": false,
  "git.decorations.enabled": false,
  "git.untrackedChanges": "hidden",
  "git.ignoreLimitWarning": true,
  
  // ============================================
  // EDITOR OPTIMIZATIONS (Disable Heavy Features)
  // ============================================
  
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.parameterHints.enabled": false,
  "editor.suggest.showSnippets": false,
  "editor.snippetSuggestions": "none",
  "editor.wordBasedSuggestions": "off",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.formatOnSave": false,
  "editor.semanticHighlighting.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  
  // ============================================
  // FILE SAVE OPTIMIZATIONS
  // ============================================
  
  "files.autoSave": "off",
  "files.autoSaveDelay": 1000,
  
  // ============================================
  // WORKBENCH OPTIMIZATIONS
  // ============================================
  
  "workbench.editor.historyBasedLanguageDetection": false,
  "workbench.localHistory.enabled": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 5,
  "workbench.editor.limit.perEditorGroup": true,
  "window.restoreWindows": "none",
  "breadcrumbs.enabled": false,
  
  // ============================================
  // TELEMETRY & UPDATES DISABLED
  // ============================================
  
  "telemetry.telemetryLevel": "off",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "update.mode": "none",
  
  // ============================================
  // EMMET OPTIMIZATION
  // ============================================
  
  "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly"
}
